<script type="text/javascript">
//<![CDATA[
  function check_payment() {
    var url = '/topics/' + $("#contact_topic_id").val() + '/payment_require';
    $.get(url, function(data) {
      if (data) {
        $("#order_number").show();
        $("textarea#contact_message").val('<%= t(:payment_message) %>');
      } else {
        $("#order_number").hide();     
        $("textarea#contact_message").val("");        
      }
    });
  }
  $(document).ready(function() {
    check_payment();
  });  
//]]>
</script>

<% @body_id = 'contact_us' %>
<div id="contact-us">
  <h1><%= t("contact_us") %></h1>
  <%= hook :contact do %>
  <%= render "shared/error_messages", :target => @contact %>
  <%= form_for(@contact, :html => {:honeypot => true}) do |f| %>
    <%= hook :contact_inside_form do %>
    <div class="field">
       <%= f.label :topic_id, t("topic") %>
       <%= f.collection_select :topic_id, @topics, :id, :name, {}, {:onchange => "check_payment();"} %>
    </div>
    <div class="field">
      <%= f.label :name, t("name") %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email, t("email") %><br />
      <% if !current_user.nil? %>
        <%= f.text_field :email, :value => current_user.email %>
      <% else %>
        <%= f.text_field :email %>
      <% end %>
    </div>
    <div class="field" id="order_number">
      <%= f.label :order_number, t("order_number") %> <br />
      <% if !current_user.nil? %>
        <%= f.collection_select :order_number, current_user.orders.select {|order| order.payment_state != "paid"}, 
                                :number, :number %>
      <% else %>
        <%= f.text_field :order_number %>
      <% end %>
      
    </div>
    <div class="field">
      <%= f.label :message, t("message") %><br />
      <%= f.text_area :message %>
    </div>
    <div class="action"><%= f.submit t("send_message"), :class => "button primary" %></div>
    <% end %>
  <% end %>
  <% end %>
</div>
